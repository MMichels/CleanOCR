    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Cleaner",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/consumers/cleaner.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "run",
            ],
            "jinja": true
        }
    ]
}